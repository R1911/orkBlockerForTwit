{
  "manifest_version": 3,
  "name": "Twitter Softblocker",
  "version": "0.1",
  "description": "Removes users that match defined variables from your feed.",
  "permissions": ["storage", "tabs"],
  
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
